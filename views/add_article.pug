extends layout

block content
  h1 #{title}
  form(method='POST', action='/articles/add')
    .form-group
      label Title:
      input.form-control(name='title', type='text') 
    .form-group
      label Erstellt von:
      select.form-control(name='author', type='text')
        option(value='Anne') Anne
        option(value='Ralf') Ralf
    .form-group
      label Body:
      textarea.form-control(name='body')
    br
    input.btn.btn-outline-dark(type='submit', value='Submit')